<div class="container" style="margin-top: 20px;">
    {{!-- FILA 1 --}}
    <div class="row">
        <p class="text-end">Hola {{usuario}} !
            <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion<i class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    {{!-- FILA 2 --}}
    <div class="row" style="margin-top: 50px;">
        <div class="col-7">
            <h3>Administracion de Contenido</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/nuevo"><i class="fa fa-plus"
                    aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
    {{!-- FILA 3 --}}
    <div class="row" style="margin-top: 20px;">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col"></th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Subtitulo</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Contenido</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td>{{descripcion}}</td>
                        <td>{{contenido}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>